		txtRegistroPorGrafo.setText("125");
		txtRegistroPorGrafo.setColumns(10);
		txtRegistroPorGrafo.setBounds(206, 214, 81, 20);
		pnOpcoes.add(txtRegistroPorGrafo);
		
		JLabel lblRegistrosPorGrafo = new JLabel("Samples / graph");
