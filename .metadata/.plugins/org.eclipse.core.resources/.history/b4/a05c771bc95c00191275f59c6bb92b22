package controller;

import org.jfree.data.category.DefaultCategoryDataset;

import model.Configuracoes;

public class GraficoController {
	
	public GraficoController() {
		
	}
	public void atualizarGrafico(DefaultCategoryDataset ds, Configuracoes config, double[] dados ) {
		for(int i = 0; i< dados.length; i++) {
			int valorFinal = 0;
			if (ds.getColumnCount() > 0) {
				valorFinal = Integer.parseInt(ds.getColumnKey(ds.getColumnCount()).toString().replace("instante ", ""));
			}
			ds.addValue(dados[i], "eletrodo "+i, "instante "+(valorFinal+1));
		}
		if(ds.getColumnCount()>5) {
			ds.removeColumn(0);
		}
		
	}
}
